.login-container{
  width: 100%;
  height: 100vh;
  position: relative; 
}

.bg{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.login-container swiper{
  height: 100vh;
}
.login-container swiper-item{
  padding: 0 20rpx 100rpx;
  box-sizing: border-box;
}
swiper image{
  border-radius: 30rpx;
  width: 100%;
}

.skip{
  width: 120rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border: 1px solid #fff;
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  position: fixed;
  top: 40rpx;
  right: 50rpx;
}
.skip_hover{
  background-color: #fff;
  color: #595959;
}

.btn-view{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 5vh;
  margin: auto;
}
.btn{
  /* background-color: #fff;
  color: #FF6460; */
  background-color: #F39E35;
  color: #FFF;
  font-size: 32rpx;
  font-weight: bold;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin: 0 50rpx;
}
.btn_2{
  background-color: #2F77F1;
  color: #fff;
}