.container{
  height: 100vh;
}

.container .title{
  padding: 0 30rpx;
}
.container .list{
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.item{
  overflow: hidden;
  margin-top: 30rpx;
  box-shadow: 2rpx 4rpx 20rpx #ccc;
  position: relative;
}
.item-title{
  width: 100%;
  height: 230rpx;
  position: relative;
}
.item .item-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(5rpx);
}
.item .date{
  font-size: 28rpx;
  line-height: 2;
}
.item .like{
  font-size: 28rpx;
  margin-right: 10rpx;
  justify-content: flex-end;
}
.item .like .iconfont{
  font-size: 28rpx;
}
.item .item-title-content{
  position: relative;
  background-color: rgba(0,0,0,0.3);
  align-items: center;
  justify-content: space-between;
  color: #fff;
  padding: 0 40rpx;
  text-align: right;
  overflow: hidden;
}
.item .item-image{
  position: relative;
  width: 130rpx;
  height: 130rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  flex-shrink: 0;
}
.item .dotted{
  margin-top: -12rpx;
  height: 20rpx;
  width: 100%;
  position: relative;
}
.item .content{
  font-size: 32rpx;
  padding: 10rpx 40rpx 20rpx;
  position: relative;
}
.item .text{
  margin: 8rpx 0;
  font-size: 24rpx;
  line-height: 1.5;
  color: #666;
  align-items: flex-start;
}
.item .text .iconfont{
  margin-right: 20rpx;
  color: #666;
  line-height: 36rpx;
  
}

.content-page{
  position: fixed;
  width: calc(100vw);
  background-color: #fff;
  top: 0;
  left: 0;  
  overflow-y: auto;

  height: calc(100vh);
  visibility: initial;
}
.content-page .item{
  margin-top: 0;
  box-shadow: 0 0 0 #000;
}
.content-page .item,.content-page.item{
  margin-top: 0;
}
.like_image{
  margin-right: 10rpx;
  transform-origin: 100% 50%;
  opacity: 1;
  transform: scale(1);
}
.like_image image{
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  margin-left: -10rpx;
}



.button-view{
  height: 100rpx;
}
.button-view .iconfont{
  margin-bottom: 10rpx;
  font-size: 36rpx;
}
.button{
  padding: 0 40rpx;
  font-size: 28rpx;
}