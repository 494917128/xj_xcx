.container{
  background-color: #f0f4f7;
  min-height: 100vh;
  padding: 0 30rpx 30rpx;
}

.title-image{
  width: calc(100% + 60rpx);
  margin: 0 -30rpx 30rpx;
  
  position: relative;
  overflow: hidden;  
}
.title-image image{
  width: 100%;
  height: 320rpx;
  display: block;
}
.title-image .prompt{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  color: #fff;
  font-size: 34rpx;
}
.container .input{
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}
.container textarea{
  margin: 10rpx 0 30rpx;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.container .btn{
  align-self: center;
  width: 100%;
  height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  background-color: #21e495;
  color: #fff;
}
