.container{
  background-color: #f0f4f7;
  min-height: 100vh;
}

.header{
  height: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
.header_title{
  font-size: 45rpx;
  box-sizing: border-box;
}
.header_num{
  align-items: flex-end;
  font-size: 100rpx;
  line-height: 1;
}


.list{
  padding: 35rpx;
}
.time{
  background-color: #D3D3D3;
  border-radius: 10rpx;
  margin: 20rpx 0;
  padding: 4rpx 16rpx;
  font-size: 26rpx;
  color: #fff;

}
.item{
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  margin-top: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.item-content{
  padding: 30rpx 0;
}
/* 积分 */
.item-user{
  margin-bottom: 40rpx;
}
.item-user-head{
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.item-user-name{
  font-size: 32rpx;
}
.item-integral-title{
  margin-top: 40rpx;
  align-self: center;
  font-size: 32rpx;
  color: #999;
}
.item-integral{
  align-self: center;
  align-items: flex-start;
  font-size: 70rpx;
  font-weight: bold;
  line-height: 1.2;
  margin-bottom: 30rpx;
  position: relative;
}
.item-integral-prompt{
  position: absolute;
  bottom: 0;
  left: 100%;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  white-space: nowrap;
}
.item-integral-text{
  color: #999;
  font-size: 30rpx;
  line-height: 1.5;
}
/* 图 */
.item-image{
  width: calc(100% + 60rpx);
  margin: 0 -30rpx;
}
/* 文 */
.item-title{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 2;
}
.item-date{
  font-size: 26rpx;
  color: #a0a0a0;
  margin-bottom: 30rpx;
}
.item-text{
  font-size: 30rpx;
  line-height: 1.5;
}
.item-desc{
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  height: 110rpx;
  border-top: 1px solid #dcdcdc;
}
.item-desc .iconfont{
  color: #999;
}