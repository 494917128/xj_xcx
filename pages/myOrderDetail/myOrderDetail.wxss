.order_list{
  font-size: 34rpx;
  height: calc(100vh - 120rpx);
  box-sizing: border-box;
}

.order_item{
  position: relative;
  margin-bottom: 30rpx;
  background: #ffffff;
}
.order_item_header{
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 28rpx;
  color: #212121;
  background-color: #fff;
}
.order_item_photo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.order_item_text{
  line-height: 40rpx;
}
.order_item_body{
  flex: 1;
  padding-left: 30rpx;
  border-top: 3rpx solid #F3F3F3;
  border-bottom: 3rpx solid #F3F3F3;
  background-color: #fff;
}
.order_item_image{
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  padding: 20rpx 0;
}
.order_item_info{
  align-self: stretch;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx 0;
  margin-left: 30rpx;
  line-height: 1.6;
  flex: 1;
}
.order_item_info_name{
  font-size: 32rpx;
  justify-content: space-between;
}
.icon-right.iconfont{
  flex-shrink: 0;
  color: #bbb;
  font-size: 32rpx;
  width: 60rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 3rpx solid #F3F3F3;
  border-bottom: 3rpx solid #F3F3F3;
}
.order_item_footer{
  padding: 0 30rpx 20rpx;
  align-items: flex-end;
  background-color: #fff;
}
.order_item_footer_text{
  color: #666;
  font-size: 28rpx;
  margin: 20rpx 0 40rpx;
}
.order_item_footer_text text{
  padding: 0 10rpx;
}
.order_item_footer_button{
  font-size: 28rpx;
  font-weight: 400;
  font-family: inherit;
  text-decoration: none;
  text-align: center;
  padding: 0 24rpx;
  margin: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 8rpx;
}

.icon-right.iconfont{
  border: none;
}
.main_container{
  padding-bottom: 120rpx;
}


.order_margin_top{
  margin-top: 30rpx;
}
.order_title{
  font-size: 28rpx;
  line-height: 1;
  color: #666;
  margin: 70rpx 30rpx 20rpx;
}

.order_item_info{
  color: #333;
}

.order_item_allprice{
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  margin-right: 30rpx;
  font-size: 24rpx;
  height: 48rpx;
  color: #666;
}

.order_item_allprice:first-child text:first-child{
  font-size: 28rpx;
}
.order_item_allprice:first-child text:last-child{
  color: #999;
}
.order_item_allprice:last-child{
  height: 88rpx;
}

.order_item_remark{
  margin-right: 30rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
  min-height: 80rpx;
}
.order_item_remark .title{
  color: #666;
  flex-shrink: 0;
}
.order_item_remark .text{
  color: #999;
}

.order_item_footer{
  justify-content: flex-end;
  border-top: 3rpx solid #dcdcdc;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
}



.guide-cover{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .3);
  
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}
.guide-cover.active{
  opacity: 1;
  visibility: initial;
}
.guide{
  width: 80%;
  border-radius: 20rpx;

  transform: scale(0);
  transition: all 0.3s;
}
.guide-cover.active .guide{
  transform: scale(1);
}
.guide image{
  width: 100%;
  border-radius: 20rpx;
}
.guide-close{
  position: absolute;
  top: 0%;
  right: 0%;
  width: 80rpx;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #fff;
  border-radius: 50%;
  transform: translate(30rpx, -30rpx);
}