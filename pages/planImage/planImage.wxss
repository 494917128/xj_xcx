.container{
  background-color: #f0f4f7;
  min-height: 100vh;
  padding: 0 30rpx;
}

.add{
  height: 200rpx;
  border-radius: 20rpx;
  border: 2px dashed #999;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #666;
}

.image{
  margin: 20rpx 0;
  border-radius: 20rpx;
  width: 100%;
  height: 320rpx;
  display: block;
}
.image.active{
  border: 2px solid #29D695;
}