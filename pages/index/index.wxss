.container{
  background-color: #fff;
  min-height: 100vh;
  width: 100vw;
  overflow: hidden;
}
.myHeader_title{
  position: absolute;
  top: -180rpx;
  left: 0;
  right: 0;
}
.myHeader_title image{
  width: 600rpx;
}
.circle{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  top: 465rpx;
  margin: auto;
  animation: circle 6s ease-in infinite;
  opacity: 0;
}
.circle2{
  animation-delay: 1.5s;
}
.circle3{
  animation-delay: 3s;
}
.circle4{
  animation-delay: 4.5s;
}
@keyframes circle {
  0% {transform: scale(.3);opacity: .3;}
  50% {opacity: .05;}
  100% {transform: scale(10);opacity: 0;}
}
.cloud,.cloud2,.cloud3{
  position: absolute;
  right: 0;
  bottom: 25rpx;
  width: 100%;
  transform-origin: 100% 100%;
  transform: scale(4);
  animation: cloud 15s linear infinite;
}
.cloud2 {
  opacity: .6;
  animation-duration: 10s;
  animation-delay: -2s;
}
.cloud3{
  opacity: .3;
  animation-duration: 20s;
  animation-delay: -4s;
}
@keyframes cloud {
  from {transform: translate(0) scale(4)}
  to {transform: translate(300%) scale(4)}
}

.container .list_none{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 60vw;
  margin: auto;
  padding-bottom: 80rpx;
}

