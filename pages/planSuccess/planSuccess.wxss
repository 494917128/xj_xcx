.container{
  min-height: 100vh;
  padding: 0 50rpx;
  position: relative;
  color: #fff;
}

.image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  display: block;
  z-index: -1
}

.title{
  font-size: 80rpx;
}
.line{
  height: 4rpx;
  width: 320rpx;
  margin: 10rpx 0;
  background-color: #fff;
}
.text{
  font-size: 50rpx;
}
.share{
  margin-top: 60rpx;
  margin-bottom: 180rpx;

  background-color: #21e495;
  color: #fff;
  border: 1px soild #29D695;
  box-shadow: 0 0 20rpx #21e495;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  padding: 0;

  font-size: 40rpx;
  transition: all .3s;
}

.title,.line,.text,.share{
  position:relative;
  left:9rpx;
}