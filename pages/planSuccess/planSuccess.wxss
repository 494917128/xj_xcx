.container{
  min-height: 100vh;
  position: relative;
  color: #333;
}
.success{
  width: 160rpx;
  height: 160rpx;
  font-size: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 200rpx;
  margin: auto;
  border-radius: 50%;
  border: 8rpx solid #fff;
}
.success .iconfont{
  font-size: 48rpx;
}
.cloud,.cloud2,.cloud3{
  position: absolute;
  right: 0;
  bottom: -1px;
  width: 200%;
  height: 148rpx;
  
  animation: cloud 10s linear infinite;
}
.cloud2 {
  opacity: .6;
  animation-duration: 5s;
  animation-delay: -2s;
  bottom: 36rpx;
}
.cloud3{
  opacity: .3;
  animation-duration: 2.5s;
  animation-delay: -4s;
  bottom: 76rpx;
  
}
@keyframes cloud {
  from {transform: translate(0)}
  to {transform: translate(50%)}
}

.title{
  font-size: 60rpx;
  color: #666;
  text-align: center;
}
.line{
  height: 4rpx;
  width: 320rpx;
  margin: 10rpx 0;
  background-color: #666;
}
.text{
  font-size: 50rpx;
  text-align: center;
}
.share{
  margin: 30rpx 0;
  background-color: #21e495;
  color: #fff;
  border: 1px soild #29D695;
  box-shadow: 0 0 20rpx #21e495;
  width: calc(100% - 100rpx);
  height: 80rpx;
  padding: 0;

  font-size: 40rpx;
  transition: all .3s;
}

.title,.line,.text,.share{
  position:relative;
  left:9rpx;
}