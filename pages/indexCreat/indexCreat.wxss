.activity-container{
  background-color: #f0f4f7;
  min-height: 100vh;
  padding: 0 30rpx;
}

.activity-container .input{
  margin: 40rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}
.activity-container textarea{
  margin: 10rpx 0 30rpx;
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.activity-container .btn{
  align-self: center;
  width: 580rpx;
  height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  background-color: #21e495;
  color: #fff;
}
