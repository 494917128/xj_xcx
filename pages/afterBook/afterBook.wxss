.container{
  background-color: #f0f4f7;
  min-height: 100vh;
}
.header-text{
  position: absolute;
  left: 65rpx;
  bottom: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.4;
}
.content{
  margin: 50rpx 50rpx 30rpx;
}

.container textarea{
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.container .btn{
  align-self: center;
  width: 580rpx;
  height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
  /* background-color: #21e495; */
  color: #fff;
}


.img_button{
  align-self:flex-start;
  font-size:28rpx;
  padding:5rpx 20rpx;
  border-radius:6rpx;
  margin: 20rpx 4rpx 0;
  position:relative;
}
.img_view{
  flex-wrap: wrap;
  margin: 24rpx 0 12rpx;
  padding: 20rpx 10rpx;
  min-height: 100rpx;
}
.item_img{
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx;
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.img_view_add{
  width: 140rpx;
  height: 140rpx;
  margin: 10rpx;
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 40rpx;
  color: #a0a0a0;
}

.prompt{
  font-size: 22rpx;
  color: #999;
  margin: 0 20rpx;
  padding-bottom: 10rpx;
}


.checkbox{
  font-size: 28rpx;
  justify-content: flex-start;
}
.checkbox checkbox{
  zoom: 0.6;
  margin-right: 10rpx;
}