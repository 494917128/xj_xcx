.input-view{
  height: 100rpx;
  border-bottom: 1px solid #dcdcdc;
  color: #000;
}
.input-view .title{
  padding: 0 20rpx;
  font-size: 36rpx;
  width: 180rpx;
}
.input-view input,.input-view picker,.input-view .picker{
  height: 100rpx;
  font-size: 32rpx;
}
.input-view .picker{
  align-items: center;
}

.container .btn{
  align-self: center;
  width: 580rpx;
  height: 100rpx;
  border-radius: 100rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  color: #fff;
}