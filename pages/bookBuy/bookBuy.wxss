.container{
  min-height: 100vh;
  background-color: #f7f4f0;
  position: relative;
  box-sizing: border-box;
}

.book-image{
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #fff;
  margin-right: 20rpx;
}
.book-info{
  font-size: 32rpx;
  border-bottom: 1px solid #dcdcdc;
  line-height: 1.8;
  margin: 15rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 2rpx 4rpx 20rpx #ddd;
}
.book-number{
  justify-content: flex-start;
}
.book-number .iconfont{
  border-radius: 10rpx;
  height: 60rpx;
  width: 60rpx;
  background-color: #f2f2f2;
  margin: 0 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.book-number text{
  padding: 0 20rpx;
}
.book-number .iconfont.defalut{
  color: #dcdcdc;
}

