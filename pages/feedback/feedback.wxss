.moments_title{
  height: 410rpx;
  width: 750rpx;
  position: relative;
  margin-bottom: 80rpx;
}
.moments_title_bg{
  width: 100%;
  height: 100%;
}
.moments_title_name{
  position: absolute;
  right: 214rpx;
  bottom: 30rpx;
  font-size: 32rpx;
  color: #fff;
  text-shadow: 2rpx 2rpx 2rpx #999;
  max-width: 420rpx;
}
.moments_title_photo{
  position: absolute;
  border: 6rpx solid #fff;
  box-shadow: 0 0 1rpx #999;
  height: 160rpx;
  width: 160rpx;
  bottom: -70rpx;
  right: 24rpx;
}

.moments_item{
  padding: 24rpx;
  border-bottom: 3rpx solid #E8E8E8;
  overflow: hidden;
}
.moments_item_photo{
  height: 90rpx;
  width: 90rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 20rpx;
}
.moments_item_title{
  justify-content: space-between;
}
.moments_item_name{
  font-size: 32rpx;
  color: #004b97;
  max-width: 420rpx;
  padding-bottom: 8rpx;
  flex: 1;
}
.moments_item_label{
  display: inline-block;
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
  margin-top: 6rpx;
}
.moments_item_text{
  font-size: 28rpx;
}
.moments_item_image_view{
  flex-wrap: wrap;
  margin: 24rpx 0 12rpx;
}
.moments_item_image{
  height: 180rpx;
  width: 180rpx;
  margin: 4rpx;
}
.moments_item_image_one{
  height: 490rpx;
  width: 490rpx;
  margin: 4rpx;
  background-size: contain;
  background-repeat: no-repeat;
}
.moments_item_video{
  height: 280rpx;
  width: 490rpx;
  margin: 4rpx;
}
.moments_item_time{
  color: #999;
  font-size: 24rpx;
}
.moments_item_button{
  font-size: 24rpx;
  padding: 0 12rpx;
  height: 40rpx;
  border-radius: 6rpx;
  margin: 0 4rpx;
  position:relative;
}