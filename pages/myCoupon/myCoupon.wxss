.container{
  min-height: 100vh;
  background-color: #f0f4f7;  
}

.list{
  padding: 20rpx 0;
}
.item{
  width: 680rpx;
  height: 210rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx #dcdcdc;
  margin: 20rpx 0;
}
.item.active{
  opacity: 0.6;
}
.item-left{
  font-family: Arial, Helvetica, sans-serif;
  width: 220rpx;
  height: 100%;
  border-radius: 20rpx;
  position: relative;
  background: linear-gradient(135deg,#54B2F0, #1376f8);
  color: #fff;
}
.item-left::before,.item-left::after{
  content: '';
  display: block;
  position: absolute;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #f7f4f0;
}
.item-left::before{
  top: -16rpx;
}
.item-left::after{
  bottom: -16rpx;
}
.item-left-text{
  z-index: 1;
  font-size: 70rpx;
}
.item-left-bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 140rpx;
  opacity: 0.3;
}
.item-right{
  padding: 0 60rpx;
  position: relative;
  overflow: hidden;
}
.item-right-title{
  width: 100%;
  padding: 20rpx 0;
  font-size: 32rpx;
}
.item-right-text{
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #a0a0a0;
}

.item-use{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  padding: 20rpx;
}
.item-lastTime{
  font-size: 24rpx;
  height: 40rpx;
  width: 200rpx;
  background-color: #179BFB;
  color: #fff;
  position: absolute;
  top: 40rpx;
  right: -100rpx;
  transform-origin: 50% -100%;
  transform: rotate(45deg);
}