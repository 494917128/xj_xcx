@import '/fonts/iconfont.wxss';
@import '/app.wxss';

.cover{
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  transition: all 0.3s;
  opacity: 0;
  visibility: hidden;
}
.show{
  visibility: visible;
  opacity: 1;
}
.container{
  width: 550rpx;
  background-color: #E8E8E8;
  border-radius: 15rpx;
  overflow: hidden;
}
.title{
  height: 110rpx;
  font-size: 32rpx;
}
.content{
  padding: 0 30rpx 30rpx;
  max-height: calc(100vh - 300rpx);
  overflow-y: auto;
  box-sizing: border-box;
}


.button{
  flex: 1;
  height: 90rpx;
  color: #0894ec;
  font-size: 32rpx;
}
.hover{
  background-color: #D4D4D4;
}