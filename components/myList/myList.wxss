@import '/fonts/iconfont.wxss';
@import '/app.wxss';
.list{
  padding: 15rpx 0;
}

.item{
  margin: 15rpx 30rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 2rpx 4rpx 20rpx #ddd;
}
.item:nth-child(3n+1){
  border-left: 10rpx solid #7583FF;
}
.item:nth-child(3n+2){
  border-left: 10rpx solid #498EFF;
}
.item:nth-child(3n){
  border-left: 10rpx solid #FF5858;
}

.content,.order{
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  line-height: 1.7;
}
.content .title{
  font-size: 30rpx;
  line-height: 1.4;
  padding-bottom: 10rpx;
}
.content .time{
  color: #a0a0a0;
  font-size: 24rpx;
}
.content .price{
  font-size: 36rpx;
  color: #666;
}

.order .title{
  justify-content: space-between;
  align-items: center;
}
.order .number{
  font-size: 28rpx;
}
.order .status{
  font-size: 28rpx;
}
.order .image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.order .info{
  
}
.order .info-title{
  font-size: 32rpx;
}
.order .info-num{
  align-self: flex-end;
  font-size: 36rpx;
}
.order .price{
  justify-content: flex-end;
  font-size: 36rpx;
}