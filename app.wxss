@import '/fonts/iconfont.wxss';

rich-text .rich-img {
  max-width: 100% ;
  height: auto ;
}
.flex_row{
  display: flex;
}
.flex_column{
  display: flex;
  flex-direction: column;
}
.flex_center{
  justify-content: center;
  align-items: center;
}
.col-1{
  flex: 1;
  overflow: hidden;
}

.main_container{
  min-height: 100vh;
  background-color: #F3F3F3;
}
.main_title{
  font-size: 40rpx;
  line-height: 2;
  position: relative;
  display: inline-block;
}
.main_title::after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 60rpx;
  height: 4rpx;
  background-color: #FF2700;
}
.main_line{
  height: 60rpx;
  width: 3rpx;
  background-color: #ccc;
}
.main_button_bg{
  background: linear-gradient(to right, #EE8240, #E64330);
}
.main_button{
  padding: 0;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  font-size: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 0 40rpx #bbb;
  position: relative;
  background: linear-gradient(to right, #EE8240, #E64330);
}
.main_button::after{
  content: '';
  border:none;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.secondary_title{
  font-size: 26rpx;
  height: 110rpx;
  line-height: 106rpx;
  padding-left: 50rpx;
}
.secondary_title::after{
  content: "";
  background-color: #FF2700;
  width: 110rpx;
  height: 4rpx;
}
.main_label{
  padding: 8rpx 6rpx;
  font-size: 24rpx;
  line-height: 1;
  border-radius: 6rpx;
  margin-left: 6rpx;
}
.main_prompt{
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  position: absolute;
  top: -5rpx;
  left: 60%;
}
.main_list_none{
  color: #999;
  font-size: 28rpx;
}
.main_list{
  background-color: #fff;
  margin-top: 50rpx;
}
.main_item{
  /* min-height: 110rpx; */
  padding-left: 30rpx;
}
.main_item_icon{
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  font-size: 28rpx;
  margin:  0 20rpx;
}
.main_item_content{
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  padding: 0 10rpx;
  border-bottom: 4rpx solid #EAEAEA;
  align-items: center;
  justify-content: space-between;
}
.main_item_info{
  margin-right: 30rpx;
  text-align: right;
  color: #999;
}
.main_item_image{
  height: 100rpx;
  width: 100rpx;
  margin: 20rpx 0;
  border-radius: 50%;
}
.main_item_content .iconfont{
  font-size: 28rpx;
  padding-left: 10rpx;
  color: #bbb;
}
.main_item_content > text{
   line-height: 110rpx; 
}
.main_item:last-child .main_item_content{
  border: none;
}
.main_level{
  text-align: center;
  color: #fff;
  background: #ae2f40;
  padding: 0 15rpx 0 40rpx;
  margin: 10rpx 0;
  height: 40rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  position: relative;
  box-sizing: border-box;
}
.main_level .iconfont{
  background: #f86681;
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  top: 0;
  bottom: 0;
  left: -4rpx;
  font-size: 32rpx;
}


.main_color{
  color: #FF2700;
}
.primary_bg{
  color: #ffffff;
  background-color: #00bcd4;
}
.info_bg{
  color: #ffffff;
  background-color: #FF2700;
}
.danger_bg{
  color: #ffffff;
  background-color: #e51c23;
}
.danger_color{
  color: #e51c23;
}
.danger_border{
  border: 3rpx solid #e51c23;
}
.define_bg{
  color: #666;
  background-color: #ddd;
}
.main_bg{
  /* background-color: #76cec7; */
  background-color: #FF2700;
  color: #fff;
}
.main_border{
  border: 1px solid #FF2700;
}


.button_hover{
  opacity: 0.7;
}
.input_placeholder{
  color: #bbb;
}
.one_line{
	overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.two_line{
	display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.three_line{
	display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}









